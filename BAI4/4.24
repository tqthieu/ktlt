def count_upper_and_lower(input_string):
    upper_count = 0
    lower_count = 0

    # Duyệt qua từng ký tự trong câu
    for char in input_string:
        if char.isupper():  # Kiểm tra nếu ký tự là chữ hoa
            upper_count += 1
        elif char.islower():  # Kiểm tra nếu ký tự là chữ thường
            lower_count += 1

    # In kết quả
    print(f"Chữ hoa: {upper_count}")
    print(f"Chữ thường: {lower_count}")

# Đọc đầu vào từ người dùng
input_string = input("Nhập câu: ")
count_upper_and_lower(input_string)
